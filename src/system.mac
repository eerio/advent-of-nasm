; syscalls
%define SYS_READ 0
%define SYS_WRITE 1
%define SYS_OPEN 2
%define SYS_EXIT 60

; I/O
%define STDIN_FILENO 0
%define STDOUT_FILENO 1
%define STDERR_FILENO 2
%define O_RDONLY 0

; exit codes
%define EXIT_OK 0

; auxiliary macros

%macro writefile 2+
	jmp  %%endstr
%%str:	db %2
%%endstr:
	mov rax, SYS_WRITE
	mov rdi, %1
	mov rsi, %%str
	mov rdx, %%endstr-%%str
	syscall
%endmacro


