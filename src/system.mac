; syscalls
%define OPEN 2
%define READ 0
%define WRITE 1
%define EXIT 60

; fs
%define STDIN 0
%define STDOUT 1

; I/O
%define O_RDONLY 0

; exit codes
%define EXIT_SUCCESS 0

; auxiliary macros
%macro writefile 2+
	jmp  %%endstr
%%str:	db %2
%%endstr:
	mov dx, %%str
	mov cx, %%endstr-%%str
	mov bx, %1
	mov ah, 0x40
	int 0x21
%endmacro


